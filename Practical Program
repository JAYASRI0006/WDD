login.php 
<?php 
session_start(); 
$success_message = ""; 
$error_message = ""; 
if ($_SERVER["REQUEST_METHOD"] == "POST") { 
 $conn = new mysqli("localhost", "root", "", "myproject");
 if ($conn->connect_error) { 
 die("Connection failed: " . $conn->connect_error); 
 } 
 $email = $_POST['email']; 
 $password = $_POST['password']; 
 $sql = "SELECT * FROM users WHERE email='$email' AND password='$password'";  $result = $conn->query($sql); 
 if ($result->num_rows > 0) { 
 $row = $result->fetch_assoc(); 
 $_SESSION['user'] = $row['email']; 
 $_SESSION['user_id'] = $row['id']; 
 $_SESSION['role'] = $row['role']; 
 if ($row['role'] === 'teacher') { 
 header("Location: addmarks.php"); 
 exit(); 
 } elseif ($row['role'] === 'student') { 
 header("Location: viewmarks.php"); 
 exit(); 
 } else { 
 $error_message = "Unknown role. Please contact admin."; 
 } 
 } else { 
 $error_message = "Invalid email or password!"; 
 } 
 $conn->close(); 
} 
?> 
